{
    "name": "nanoblocktech/luminova",
    "description": "Luminova PHP framework design for speed",
    "keywords": ["framework","php","api","router"],
    "license": "MIT",
    "type": "project",
    "homepage": "https://github.com/nanoblocktech/luminova",
    "support": {
        "source": "https://github.com/nanoblocktech/luminova/"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "peterujah/php-functions": "^1.3"
    },
    "suggest": {
        "ext-curl": "Needed if you use CURLRequest class",
        "ext-exif": "Needed if you run Image class tests",
        "ext-fileinfo": "Needed to improves mime type detection for files",
        "ext-gd": "Needed if you use Image class GDHandler",
        "ext-imagick": "Needed if you use Image class ImageMagickHandler",
        "ext-memcache": "Needed if you use Cache class MemcachedHandler with Memcache",
        "ext-memcached": "Needed if you use Cache class MemcachedHandler with Memcached",
        "ext-mysqli": "Needed if you use MySQL"
    },
    "autoload": {
        "psr-4": {
            "Luminova\\": "system/",
            "Luminova\\Cache\\": "system/Cache/",
            "Luminova\\Exceptions\\": "system/Exceptions/",
            "Luminova\\Config\\": "system/Config/",
            "Luminova\\Logger\\": "system/Logger/",
            "Luminova\\Sessions\\": "system/Sessions/",
            "Luminova\\Security\\": "system/Security/",
            "Luminova\\Seo\\": "system/Seo/",
            "Luminova\\Database\\": "system/Database/",
            "Luminova\\Functions\\": "system/Functions/",
            "App\\Controllers\\": "app/Controllers/"
        }
    },    
    "autoload-dev": {
        "psr-4": {
            "Luminova\\Tests\\": "tests"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "vendor-dir": "system/plugins"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "1.x-dev"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "Luminova\\ComposerAutoUpdater::updateFiles",
            "@postUpdateHandler"
        ],
        "post-install-cmd": [
            "Luminova\\ComposerAutoUpdater::updateFiles",
            "@postUpdateHandler"
        ],
        "post-updateHandler": [
            "echo Checking for existing .env file...",
            "@php -r \"file_exists('.env') || copy('samples/.env', '.env');\"",
            "echo Checking for existing meta config file...",
            "@php -r \"file_exists('meta.config.json') || copy('samples/meta.config.json', 'meta.config.json');\"",
            "echo Checking for existing controller config file...",
            "@php -r \"file_exists('app/Controllers/Config.php') || copy('samples/Config.php', 'app/Controllers/Config.php');\"",
            "echo Checking for existing function config file...", 
            "@php -r \"file_exists('app/Controllers/Func.php') || copy('samples/Func.php', 'app/Controllers/Func.php');\"",
            "echo Checking for existing api autoloader file...", 
            "@php -r \"file_exists('system/autoload.api.php') || copy('samples/autoload.api.php', 'system/autoload.api.php');\"",
            "echo Checking for index file...", 
            "@php -r \"file_exists('public/index.php') || copy('samples/index.php', 'public/index.php');\"",
            "echo Checking for htaccess file...", 
            "@php -r \"file_exists('public/.htaccess') || copy('samples/.htaccess', 'public/.htaccess');\"",
            "echo Checking for robots file...", 
            "@php -r \"file_exists('public/robots.txt') || copy('samples/robots.txt', 'public/robots.txt');\"",
            "echo Checking for api folder...", 
            "@php -r \"file_exists('public/api/') || copy('samples/api/', 'public/api/');\"",
            "echo Checking for assets folder...", 
            "@php -r \"file_exists('public/assets/') || mkdir('public/assets/');\"",
            "echo Done."
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}