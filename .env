app.name = Luminova
app.hostname = localhost
app.base.url = https://localhost/luminova.com/public
app.base.www.url = https://www.localhost/luminova.com/public
app.timezone = UTC
;app.developer = Nanoblock Technology
# [production and development]
app.environment.mood = development
app.maintenance.mood = 0
app.version = 1
app.file.version = 1
# [production, development and testing]
cli.environment.mood = testing

enable.compression = 1
build.minify = 0
cache.control = no-store
enable.optimize.page = 0
page.optimize.expiry = 2592000
script.execution.limit = 90
script.ignore.abort = 1
script.ob.handler = ob_gzhandler
compression.level = 6

# EMAIL AND SMTP SETTING

smtp.use.credentials = 0
smtp.use.password = 0
smtp.debug = 0
smtp.host = 
smtp.port = 465
smtp.username = 
smtp.password = 
smtp.email.sender = 
smtp.encryption = tls
smtp.charset = utf8

# DATABASE

database.hostname = localhost
database.port = 3306
database.charset = utf8

# DATABASE DIVERS [MYSQLI and PDO]
database.driver = PDO
# DATABASE VERSIONS FOR PDO [mysql, sqlite and pgsql]
database.version = mysql

# DATABASE CONNECTION DETAILS FOR PRODUCTION
database.username = 
database.name = 
database.password = 

# DATABASE CONNECTION DETAILS FOR DEVELOPMENT
